<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_openserver_icon"
        android:background="@drawable/def_head"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_width="58dp"
        android:layout_height="58dp" />

    <TextView
        android:id="@+id/tv_hotname_title"
        android:layout_toRightOf="@+id/iv_openserver_icon"
        android:text="扑克捕鱼"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_hot_typename"
        android:layout_below="@+id/tv_hotname_title"
        android:layout_toRightOf="@+id/iv_openserver_icon"
        android:drawablePadding="5dp"
        android:text="类型：休闲益智"
        android:textColor="#aa000000"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_hot_size"
        android:layout_toRightOf="@+id/iv_openserver_icon"
        android:layout_below="@+id/tv_hot_typename"
        android:text="大小：不大"
        android:textColor="#aa000000"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/btn_openserver_cat"
        android:text="人在玩"
        android:textColor="#AA787373"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/tv_hot_typename"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/tv_hotnum_click"
        android:layout_alignBaseline="@+id/tv_hot_typename"
        android:layout_toLeftOf="@id/btn_openserver_cat"
        android:text="11111"
        android:textColor="#ccba1212"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:background="#aa888888"
        android:layout_alignBottom="@+id/tv_openserver_store"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>