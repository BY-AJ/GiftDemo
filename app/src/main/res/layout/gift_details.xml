<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/iv_background_drable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/def_head"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_logo"
                        android:src="@drawable/def_head"
                        android:layout_centerInParent="true"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#88000000"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_download_day"
                            android:text="有效期:2017-11-30"
                            android:textColor="#f1ecec"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_download_icon"
                            android:layout_alignBaseline="@+id/iv_download_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_download_gift_num"
                            android:text="礼包剩余:"
                            android:textColor="#f1ecec"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@+id/iv_download_icon"
                            android:layout_alignBaseline="@+id/iv_download_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                        <TextView
                            android:id="@+id/tv_download_gift_count"
                            android:text="7"
                            android:textColor="#ed3131"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:text="礼包说明"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#6ae4ff"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_width="80dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_GiftNote_des"
                android:textColor="#88000000"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="兑换方式"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />
            <View
                android:background="#6ae4ff"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_width="80dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_Exchange_Way_des"
                android:textColor="#88000000"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <View
        android:background="#FF6A6A"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_download"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="立即领取"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#FF6A6A"
            android:layout_width="120dp"
            android:layout_height="40dp" />
        <ImageButton
            android:id="@+id/ib_gift_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/my_gift_red"/>
    </RelativeLayout>
</LinearLayout>