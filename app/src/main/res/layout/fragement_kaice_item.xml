<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/second_kaice_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/second_kaice_ImageView"
        android:id="@+id/second_kaice_gname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/second_kaice_ImageView"
        android:id="@+id/second_addtimeAndGettime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:text=""/>
    <TextView
        android:layout_alignBottom="@id/second_kaice_ImageView"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/second_kaice_ImageView"
        android:id="@+id/second_kaice_operators_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <Button
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:id="@+id/kaice_btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFDFDFE"
        android:text="查看"
        android:background="#FFF40D0D"/>

</RelativeLayout>