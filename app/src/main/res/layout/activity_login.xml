<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_bar"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_account"
            android:background="@null"
            android:hint="请输入ID/邮箱/手机号码"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="#c8c8c8c8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_psd"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_psd"
            android:background="@null"
            android:hint="请输入密码"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="#c8c8c8c8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_login"
        android:text="立即登录"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#FF6A6A"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>