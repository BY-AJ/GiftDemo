<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:background="@drawable/def_loading"
                android:id="@+id/iv_newgame_logo"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/newgame_title_bar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_author"
                android:layout_alignParentBottom="true"
                android:src="@drawable/def_head"
                android:layout_marginBottom="70dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_newgame_des"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="#88000000"
                android:layout_alignParentBottom="true"
                android:layout_alignBaseline="@+id/civ_author"
                android:layout_toRightOf="@+id/civ_author"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_newgame"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</ScrollView>